<ul class="breadcrumb">
  <li><a href="#">Home</a> <span class="divider">/</span></li>
  <li><%= link_to 'Boards', boards_path %>
    <span class="divider">/</span></li>
  <li><%= link_to @topic.board.name, board_path(@topic.board) %>
    <span class="divider">/</span></li>
  <li class="active"><%= @topic.subject %></li>
</ul>

<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1><%= @topic.subject %></h1>
</div>

<div id="posts">
  <%= render @topic.posts %>
</div>

<br/>

<%= form_for(Post.new, :remote => true) do |f| %>
    <%= f.hidden_field :topic_id, :value => @topic.id %>

    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'span6' %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>

<%= link_to 'New Post', new_topic_post_path(@topic), class: "btn" %>

</div>
